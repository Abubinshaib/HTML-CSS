
<!-- Styling lists and Tables -->



<!DOCTYPE html>
<html>
<head>
  <style>
    ul {
      list-style-type: square;    /* circle, disc, none */
      padding-left: 30px;         /* space from left */
      color: darkblue;
    }

    ol {
      list-style-type: upper-roman; /* 1, A, a, I, i */
      background: #f0f0f0;          
      padding: 15px;
      border-radius: 10px;
    }

    li {
      margin: 5px 0;             /* space between list items */
      font-size: 18px;
    }
  </style>
</head>
<body>
  <h2>Unordered List</h2>
  <ul>
    <li>Apple</li>
    <li>Banana</li>
    <li>Orange</li>
  </ul>

  <h2>Ordered List</h2>
  <ol>
    <li>HTML</li>
    <li>CSS</li>
    <li>JavaScript</li>
  </ol>
</body>
</html>




<!DOCTYPE html>
<html>
<head>
  <style>
    table {
      width: 70%;
      border-collapse: collapse; /* remove double borders */
      margin: 20px auto;         /* center the table */
    }

    th, td {
      border: 2px solid black;   /* border for each cell */
      padding: 10px;             /* space inside cells */
      text-align: center;        /* center text */
    }

    th {
      background-color: navy;    /* header background */
      color: white;              /* header text color */
    }
  </style>
</head>
<body>
  <h2>Basic Table Example</h2>
  <table>
    <tr>
      <th>Name</th>
      <th>Subject</th>
      <th>Marks</th>
    </tr>
    <tr>
      <td>Ameer</td>
      <td>Math</td>
      <td>85</td>
    </tr>
    <tr>
      <td>Rahul</td>
      <td>Science</td>
      <td>90</td>
    </tr>
  </table>
</body>
</html>

